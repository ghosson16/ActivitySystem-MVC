@using ActivitySystem.Models.ActivityVM
@model ActivityDetailsViewModel

<div class="card shadow-sm rounded-4 border-0 mb-4 overflow-hidden">
    <div class="card-body p-4">
        <div class="d-flex align-items-center mb-3">
            <div class="bg-dark text-white rounded-3 p-2 me-3 shadow-sm">
                <i class="bi bi-sliders2-vertical fs-5"></i>
            </div>
            <h6 class="fw-bold mb-0 text-dark">Activity Management</h6>
        </div>

        <div class="d-grid gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-light border py-2 rounded-3 text-start d-flex align-items-center justify-content-between">
                <span><i class="bi bi-pencil-square me-2 text-primary"></i> Edit Details</span>
                <i class="bi bi-chevron-right small text-muted"></i>
            </a>

            <button type="button" class="btn btn-light border py-2 rounded-3 text-start d-flex align-items-center justify-content-between text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <span><i class="bi bi-trash3 me-2"></i> Delete Activity</span>
                <i class="bi bi-chevron-right small text-muted"></i>
            </button>

            <div class="my-2 border-top"></div>

            <a asp-controller="Subscription" asp-action="AttendanceReport" asp-route-id="@Model.Id"
               class="btn btn-dark py-3 rounded-4 shadow-sm fw-bold">
                <i class="bi bi-file-earmark-bar-graph me-2"></i> View Attendance Report
            </a>
        </div>
    </div>
</div>