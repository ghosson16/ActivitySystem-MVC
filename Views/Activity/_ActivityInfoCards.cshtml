@using ActivitySystem.Models.ActivityVM
@model ActivityDetailsViewModel

<div class="row mt-4">
    <div class="col-sm-6 mb-3">
        <div class="p-3 border-0 rounded-3 bg-light d-flex align-items-center h-100">
            <div class="icon-box bg-primary bg-opacity-10 text-primary rounded-3 me-3">
                <i class="bi bi-calendar3 fs-4"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1 small text-uppercase fw-bold">Date & Time</h6>
                <strong class="d-block">@Model.Date.ToLongDateString()</strong>
                <span class="text-muted small">@Model.Date.ToShortTimeString()</span>
            </div>
        </div>
    </div>
    <div class="col-sm-6 mb-3">
        <div class="p-3 border-0 rounded-3 bg-light d-flex align-items-center h-100">
            <div class="icon-box bg-danger bg-opacity-10 text-danger rounded-3 me-3">
                <i class="bi bi-geo-alt-fill fs-4"></i>
            </div>
            <div>
                <h6 class="text-muted mb-1 small text-uppercase fw-bold">Location</h6>
                <strong class="d-block">@Model.Location</strong>
            </div>
        </div>
    </div>
</div>