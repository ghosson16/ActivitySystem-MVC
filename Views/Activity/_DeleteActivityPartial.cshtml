@using ActivitySystem.Models.ActivityVM
@model ActivityDeleteViewModel

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg rounded-4 overflow-hidden">

            <div class="modal-header bg-dark text-white border-0 py-3">
                <h6 class="modal-title fw-bold">
                    <i class="bi bi-shield-exclamation me-2 text-warning"></i> Confirm Deletion
                </h6>
                <button type="button" class="btn-close btn-close-white shadow-none" data-bs-dismiss="modal" style="font-size: 0.8rem;"></button>
            </div>

            <div class="modal-body p-5 text-center">
                <div class="mb-3">
                    <i class="bi bi-trash3 text-danger opacity-75" style="font-size: 3.5rem;"></i>
                </div>

                <h5 class="fw-bold text-dark">Delete Activity?</h5>
                <p class="text-muted small px-3">
                    Are you sure you want to delete <span class="text-dark fw-bold">"@Model.Title"</span>?
                    <br>This action will remove all subscriptions and cannot be undone.
                </p>
            </div>

            <div class="modal-footer border-0 pb-4 justify-content-center">
                <button type="button" class="btn btn-light px-4 rounded-pill fw-bold text-muted me-2" data-bs-dismiss="modal">
                    No, Cancel
                </button>

                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-dark px-4 rounded-pill fw-bold">
                        Yes, Delete Activity
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>