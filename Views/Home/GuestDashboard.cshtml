@using ActivitySystem.Models.DashboardVM
@model GuestDashboardViewModel

@{
    ViewData["Title"] = "Guest Dashboard";
}

<div class="container py-5 mt-2">
    <div class="dashboard-hero text-white mb-5 shadow-lg">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <span class="badge bg-secondary mb-3 px-3 py-2 rounded-pill fw-bold" style="letter-spacing: 1px;">GUEST PANEL</span>
                <h1 class="display-5 fw-bold mb-3">Hello, Explorer! 🌟</h1>
                <p class="lead opacity-75 mb-0">
                    Your next adventure is just a click away. Manage your bookings and track your activity history from here.
                </p>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <i class="bi bi-rocket-takeoff opacity-25" style="font-size: 8rem;"></i>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-6">
            <div class="p-4 bg-white rounded-4 border shadow-sm d-flex align-items-center h-100">
                <div class="icon-box border-0 rounded-3 bg-primary-subtle text-primary me-3 mb-0" style="width: 50px; height: 50px;">
                    <i class="bi bi-calendar-check fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small fw-bold text-uppercase">Upcoming Activities</h6>
                    <h3 class="fw-bold mb-0">@Model.UpcomingActivitiesCount</h3>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="p-4 bg-white rounded-4 border shadow-sm d-flex align-items-center h-100">
                <div class="icon-box border-0 rounded-3 bg-success-subtle text-success me-3 mb-0" style="width: 50px; height: 50px;">
                    <i class="bi bi-award fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small fw-bold text-uppercase">Events Attended</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalAttendedCount</h3>
                </div>
            </div>
        </div>
    </div>

    <h5 class="fw-bold text-dark mb-4 ms-2">Quick Navigation</h5>
    <div class="row g-4">
        <div class="col-md-6">
            <a asp-controller="Activity" asp-action="Index" class="action-card p-4 d-block h-100 text-decoration-none">
                <div class="icon-box border-0 rounded-3 bg-primary text-white shadow-sm mb-3">
                    <i class="bi bi-search"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">Explore Activities</h4>
                <p class="text-muted mb-0">Browse all available events and find something new to join today.</p>
            </a>
        </div>

        <div class="col-md-6">
            <a asp-controller="Subscription" asp-action="MySubscriptions" class="action-card p-4 d-block h-100 text-decoration-none">
                <div class="icon-box border-0 rounded-3 bg-dark text-white shadow-sm mb-3">
                    <i class="bi bi-ticket-perforated"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">My Subscriptions</h4>
                <p class="text-muted mb-0">View your registration status, cancel bookings, or check past attendance.</p>
            </a>
        </div>
    </div>
</div>