@using ActivitySystem.Models.DashboardVM
@model OrganizerDashboardViewModel

@{
    ViewData["Title"] = "Organizer Dashboard";
}

<div class="container py-5 mt-2">
    <div class="dashboard-hero text-white mb-5 shadow-lg">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <span class="badge bg-primary mb-3 px-3 py-2 rounded-pill fw-bold" style="letter-spacing: 1px;">ORGANIZER PANEL</span>
                <h1 class="display-5 fw-bold mb-3">Welcome back, Captain! 👨‍✈️</h1>
                <p class="lead opacity-75 mb-0">
                    Ready to launch a new activity? Manage your events and track participants efficiently from here.
                </p>
            </div>
            <div class="col-lg-4 text-center d-none d-lg-block">
                <i class="bi bi-shield-check opacity-25" style="font-size: 8rem;"></i>
            </div>
        </div>
    </div>

    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="p-4 bg-white rounded-4 border shadow-sm d-flex align-items-center h-100">
                <div class="icon-box border-0 rounded-3 bg-primary-subtle text-primary me-3 mb-0" style="width: 50px; height: 50px;">
                    <i class="bi bi-calendar-event fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small fw-bold text-uppercase">Active Events</h6>
                    <h3 class="fw-bold mb-0">@Model.ActiveEventsCount</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 bg-white rounded-4 border shadow-sm d-flex align-items-center h-100">
                <div class="icon-box border-0 rounded-3 bg-success-subtle text-success me-3 mb-0" style="width: 50px; height: 50px;">
                    <i class="bi bi-people fs-4"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-0 small fw-bold text-uppercase">Total Guests</h6>
                    <h3 class="fw-bold mb-0">@Model.TotalParticipantsCount</h3>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="p-4 bg-white rounded-4 border shadow-sm d-flex align-items-center h-100">
                <div class="icon-box border-0 rounded-3 bg-warning-subtle text-warning me-3 mb-0" style="width: 50px; height: 50px;">
                    <i class="bi bi-graph-up-arrow fs-4"></i>
                </div>
                <div class="w-100">
                    <h6 class="text-muted mb-0 small fw-bold text-uppercase">Engagement</h6>
                    <h3 class="fw-bold mb-0">@Model.EngagementRate%</h3>
                    <div class="progress mt-2" style="height: 4px;">
                        <div class="progress-bar bg-warning" role="progressbar" style="width: @Model.EngagementRate%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <h5 class="fw-bold text-dark mb-4 ms-2">Quick Management</h5>
    <div class="row g-4">
        <div class="col-md-6">
            <a asp-controller="Activity" asp-action="Create" class="action-card p-4 d-block h-100 text-decoration-none">
                <div class="icon-box border-0 rounded-3 bg-primary text-white shadow-sm mb-3">
                    <i class="bi bi-plus-lg"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">Create New Activity</h4>
                <p class="text-muted mb-0">Set up a new event, define slots, and start receiving subscriptions immediately.</p>
            </a>
        </div>

        <div class="col-md-6">
            <a asp-controller="Activity" asp-action="Index" class="action-card p-4 d-block h-100 text-decoration-none">
                <div class="icon-box border-0 rounded-3 bg-dark text-white shadow-sm mb-3">
                    <i class="bi bi-kanban"></i>
                </div>
                <h4 class="fw-bold text-dark mb-2">Activities Control</h4>
                <p class="text-muted mb-0">Monitor your active events, edit details, or access attendance reports for each activity.</p>
            </a>
        </div>
    </div>
</div>