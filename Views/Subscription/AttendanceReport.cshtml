@using ActivitySystem.Models.SubscriptionVM
@model AttendanceReportViewModel

@{
    ViewData["Title"] = "Attendance Report";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 p-4 rounded-4">
        <div class="mb-4 no-print">
            <a asp-controller="Activity" asp-action="Details" asp-route-id="@Model.ActivityId" class="text-decoration-none text-muted small">
                <i class="bi bi-arrow-left me-1"></i> Back to Activity Details
            </a>
        </div>

        <div class="d-flex justify-content-between align-items-end pb-3 mb-4 border-bottom">
            <div>
                <h2 class="fw-bold text-dark mb-1">
                    <i class="bi bi-clipboard-check text-primary me-2"></i> Attendance Report
                </h2>
                <div class="d-flex gap-3 text-muted small">
                    <span><strong>Activity:</strong> @Model.ActivityTitle</span>
                    <span>|</span>
                    <span><i class="bi bi-calendar-event me-1"></i> @Model.ActivityDate.ToLongDateString()</span>
                </div>
            </div>

            <div class="no-print">
                <button onclick="window.print()" class="btn btn-light border rounded-pill px-3 btn-sm">
                    <i class="bi bi-printer me-1"></i> Print
                </button>
            </div>
        </div>

        @if (!Model.Attendees.Any())
        {
            <div class="text-center py-5">
                <i class="bi bi-people text-muted display-1 opacity-25"></i>
                <p class="mt-3 fs-5 text-secondary">No guests have registered for this activity yet.</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle custom-table">
                    <thead class="table-light">
                        <tr>
                            <th class="ps-4 border-0">Guest Name</th>
                            <th class="border-0">Phone Number</th>
                            <th class="text-center border-0">Status</th>
                            <th class="text-center no-print border-0">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var attendee in Model.Attendees)
                        {
                            <tr>
                                <td class="ps-4 fw-bold text-dark">@attendee.GuestName</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(attendee.GuestPhoneNumber))
                                    {
                                        <a href="tel:@attendee.GuestPhoneNumber" class="text-decoration-none text-primary fw-semibold">
                                            <i class="bi bi-telephone-fill me-1 small"></i> @attendee.GuestPhoneNumber
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">Not Provided</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (attendee.IsAttended)
                                    {
                                        <span class="badge bg-success-subtle text-success rounded-pill px-3 py-2">
                                            <i class="bi bi-check-circle-fill me-1"></i> Attended
                                        </span>
                                    }
                                    else if (Model.ActivityDate.Date > DateTime.Now.Date)
                                    {
                                        <span class="badge bg-info-subtle text-info rounded-pill px-3 py-2">
                                            <i class="bi bi-calendar-check me-1"></i> Registered
                                        </span>
                                    }
                                    else if (Model.ActivityDate.Date == DateTime.Now.Date)
                                    {
                                        <span class="badge bg-warning-subtle text-warning rounded-pill px-3 py-2">
                                            <i class="bi bi-hourglass-split me-1"></i> Pending
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-light text-secondary border rounded-pill px-3 py-2">
                                            <i class="bi bi-dash-circle me-1"></i> Absent
                                        </span>
                                    }
                                </td>
                                <td class="text-center no-print">
                                    @if (attendee.IsAttended)
                                    {
                                        <span class="text-success small fw-bold">
                                            <i class="bi bi-check-all"></i> Verified
                                        </span>
                                    }
                                    else if (Model.ActivityDate.Date == DateTime.Now.Date)
                                    {
                                        <form asp-action="MarkAsPresent" method="post" class="d-inline">
                                            <input type="hidden" name="activityId" value="@Model.ActivityId" />
                                            <input type="hidden" name="guestId" value="@attendee.GuestId" />
                                            <button type="submit" class="btn btn-sm btn-dark px-3 rounded-pill shadow-sm">
                                                Mark as Present
                                            </button>
                                        </form>
                                    }
                                    else if (Model.ActivityDate.Date > DateTime.Now.Date)
                                    {
                                        <small class="text-muted italic">Waiting for event...</small>
                                    }
                                    else
                                    {
                                        <small class="text-danger fw-bold">Missed</small>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>