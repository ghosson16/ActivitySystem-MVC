<header class="main-header w-100 shadow-sm">
    <nav class="navbar navbar-expand-lg py-3">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4 text-white" asp-controller="Home" asp-action="Index">
                ACTIVITY<span class="text-secondary">SYSTEM</span>
            </a>

            <button class="navbar-toggler border-0 shadow-none text-white" type="button" data-bs-toggle="collapse" data-bs-target="#nav_lc">
                <i class="bi bi-list fs-1"></i>
            </button>

            <div class="collapse navbar-collapse" id="nav_lc">
                <ul class="navbar-nav mx-auto mt-3 mt-lg-0">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var dashboardAction = User.IsInRole("Organizer") ? "OrganizerDashboard" : "GuestDashboard";
                        var homeText = User.IsInRole("Organizer") ? "Dashboard" : "Home";

                        <li class="nav-item">
                            <a class="nav-link px-3 active-nav-link" asp-controller="Home" asp-action="@dashboardAction">@homeText</a>
                        </li>

                        @if (User.IsInRole("Guest"))
                        {
                            <li class="nav-item">
                                <a class="nav-link px-3 active-nav-link" asp-controller="Subscription" asp-action="MySubscriptions">My Joins</a>
                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link px-3 active-nav-link" asp-controller="Activity" asp-action="Index">Explore</a>
                        </li>
                    }
                </ul>

                <div class="d-flex align-items-center mt-3 mt-lg-0">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>
</header>