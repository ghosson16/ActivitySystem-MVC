@using ActivitySystem.Models.AccountVM
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 g-0 custom-auth-card overflow-y-hidden border-0 d-flex flex-column flex-md-row" style="min-height: 480px;">

            <div class="col-md-5 dark-auth-section d-flex flex-column align-items-center justify-content-center p-4 text-center">
                <div class="mb-3">
                    <i class="bi bi-person-circle text-secondary opacity-50" style="font-size: 5rem;"></i>
                </div>

                <h4 class="fw-bold mb-0">Welcome Back!</h4>
                <p class="small opacity-75 mt-2 mb-4">Log in to discover and manage events.</p>

                <a asp-action="Register" class="btn btn-outline-light btn-sm rounded-pill px-4 fw-semibold">Create Account</a>
            </div>

            <div class="col-md-7 p-5 d-flex flex-column justify-content-center">
                <h4 class="fw-bold mb-4 text-dark">Sign In</h4>

                <form asp-action="Login" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center border-bottom pb-1 custom-focus">
                            <i class="bi bi-envelope text-muted me-2"></i>
                            <input asp-for="Email" class="form-control border-0 shadow-none p-0 bg-transparent fs-6" placeholder="Your Email" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger extra-small"></span>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center border-bottom pb-1 custom-focus">
                            <i class="bi bi-lock text-muted me-2"></i>
                            <input asp-for="Password" type="password" class="form-control border-0 shadow-none p-0 bg-transparent fs-6" placeholder="Password" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger extra-small"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="form-check m-0">
                            <input asp-for="RememberMe" class="form-check-input shadow-none" />
                            <label class="form-check-label extra-small text-muted" asp-for="RememberMe">Remember me</label>
                        </div>
                        <a asp-controller="Account" asp-action="VerifyEmail" class="extra-small text-decoration-none fw-bold text-dark">Forgot Password?</a>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 rounded-3 py-2 fw-bold shadow-sm mb-3">
                        Login
                    </button>

                    <div class="text-center mt-2">
                        <a asp-controller="Home" asp-action="Index" class="text-muted extra-small text-decoration-none hover-dark">
                            <i class="bi bi-arrow-left"></i> Back to Homepage
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>