@using ActivitySystem.Models.AccountVM
@model ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}


<div class="container py-5 mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-9 g-0 custom-auth-card overflow-hidden border-0 d-flex flex-column flex-md-row" style="min-height: 450px;">

            <div class="col-md-5 dark-auth-section d-flex flex-column align-items-center justify-content-center p-4 text-center">
                <div class="mb-3">
                    <i class="bi bi-shield-lock text-secondary opacity-50" style="font-size: 5rem;"></i>
                </div>
                <h4 class="fw-bold mb-2">Secure Account</h4>
                <p class="small opacity-75 mb-4">Set a strong password to keep your events and data safe.</p>
            </div>

            <div class="col-md-7 p-5 d-flex flex-column justify-content-center">
                <h4 class="fw-bold mb-4 text-dark">Change Password</h4>

                <form asp-action="ChangePassword" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-4">
                        <div class="d-flex align-items-center border-bottom pb-1 bg-light px-2 rounded-1">
                            <i class="bi bi-envelope-at text-muted me-2"></i>
                            <input asp-for="Email" class="form-control border-0 shadow-none p-0 bg-transparent fs-6" readonly />
                        </div>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex align-items-center border-bottom pb-1 custom-focus">
                            <i class="bi bi-key text-muted me-2"></i>
                            <input asp-for="NewPassword" id="passwordInput" type="password" class="form-control border-0 shadow-none p-0 bg-transparent" placeholder="New Password" />
                        </div>
                        <span asp-validation-for="NewPassword" class="text-danger extra-small"></span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex align-items-center border-bottom pb-1 custom-focus">
                            <i class="bi bi-check2-circle text-muted me-2"></i>
                            <input asp-for="ConfirmNewPassword" type="password" class="form-control border-0 shadow-none p-0 bg-transparent" placeholder="Confirm New Password" />
                        </div>
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger extra-small"></span>
                    </div>

                    <div id="passwordChecklist" class="mb-4 p-2 bg-light rounded-3 shadow-sm" style="font-size: 0.7rem;">
                        <div class="row g-1">
                            <div id="lengthReq" class="col-6 text-danger">● 6+ chars</div>
                            <div id="upperReq" class="col-6 text-danger">● Uppercase</div>
                            <div id="lowerReq" class="col-6 text-danger">● Lowercase</div>
                            <div id="numberReq" class="col-6 text-danger">● Number</div>
                            <div id="specialReq" class="col-12 text-danger">● Special (@@, #, !)</div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-dark w-100 rounded-3 py-2 fw-bold shadow-sm mb-3">
                        Change Password
                    </button>

                    <div class="text-center mt-2">
                        <a asp-controller="Account" asp-action="VerifyEmail" class="text-muted extra-small text-decoration-none hover-dark">
                            <i class="bi bi-arrow-left"></i> Back to Verify
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById('passwordInput').addEventListener('input', function () {
            const pwd = this.value;
            updateReq('lengthReq', pwd.length >= 6);
            updateReq('upperReq', /[A-Z]/.test(pwd));
            updateReq('lowerReq', /[a-z]/.test(pwd));
            updateReq('numberReq', /[0-9]/.test(pwd));
            updateReq('specialReq', /[!@@#$%^&*(),.?":{}|<>]/.test(pwd));
        });

        function updateReq(id, isValid) {
            const el = document.getElementById(id);
            if (isValid) {
                el.classList.remove('text-danger');
                el.classList.add('text-success');
                el.innerHTML = el.innerHTML.replace('●', '✔');
            } else {
                el.classList.remove('text-success');
                el.classList.add('text-danger');
                el.innerHTML = el.innerHTML.replace('✔', '●');
            }
        }
    </script>
}